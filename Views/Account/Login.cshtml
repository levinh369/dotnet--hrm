@model DACN.DTOs.Request.LoginRequest
@{
    ViewData["Title"] = "Đăng nhập hệ thống quản lý nhân sự";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            position: relative;
            height: 100vh;
            margin: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            font-family: 'Segoe UI', sans-serif;
            overflow: hidden;
        }

            /* 🌆 Ảnh nền văn phòng chuyên nghiệp */
            body::before {
                content: "";
                position: absolute;
                inset: 0;
                background: url('https://images.unsplash.com/photo-1521737604893-d14cc237f11d?auto=format&fit=crop&w=1920&q=80') no-repeat center center;
                background-size: cover; /* ảnh phủ toàn màn hình mà không bị cắt */
                background-attachment: fixed; /* tạo cảm giác chiều sâu khi cuộn */
                z-index: 0;
                filter: blur(2.5px) brightness(0.75); /* giảm blur nhẹ cho rõ chi tiết hơn */
            }


        .login-card {
            position: relative;
            z-index: 1;
            background: rgba(255, 255, 255, 0.92);
            border-radius: 15px;
            padding: 50px 40px;
            width: 400px;
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.3);
            backdrop-filter: blur(5px);
            animation: fadeIn 0.7s ease-in-out;
        }

            .login-card h3 {
                color: #1e3a8a;
                font-weight: 700;
                margin-bottom: 30px;
            }

        .form-control {
            border-radius: 10px;
        }

        .btn-login {
            background-color: #2563eb;
            color: white;
            font-weight: 500;
            border-radius: 10px;
            transition: 0.3s;
        }

            .btn-login:hover {
                background-color: #1e40af;
            }

        .links {
            margin-top: 15px;
            font-size: 0.9rem;
            display: flex;
            justify-content: space-between;
        }

        .text-error {
            color: #dc2626;
            font-weight: 500;
            margin-bottom: 15px;
            text-align: center;
        }

       
    </style>
</head>

<body>
    <div class="login-card">
        <h3 class="text-center">Đăng nhập hệ thống</h3>

        @if (ViewBag.Error != null)
        {
            <p class="text-error">@ViewBag.Error</p>
        }

        <form asp-action="Login" asp-controller="Account" method="post">
            <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />
            <div class="mb-3">
                <label for="Email" class="form-label">Email</label>
                <input type="text" id="Email" name="Email" class="form-control" placeholder="Nhập email" required />
            </div>

            <div class="mb-3">
                <label for="password" class="form-label">Mật khẩu</label>
                <input type="password" id="password" name="Password" class="form-control" placeholder="Nhập mật khẩu" required />
            </div>
            @Html.ValidationSummary(true, "", new { @class = "text-error" })
            <button type="submit" class="btn btn-login w-100 mt-3">Đăng nhập</button>
        </form>

        <div class="links">
            <a asp-action="ForgotPassword" asp-controller="Account">Quên mật khẩu?</a>
            <a asp-action="Register" asp-controller="Account">Tạo tài khoản mới</a>
        </div>
    </div>
</body>
</html>

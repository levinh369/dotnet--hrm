@* Views/Shared/_JobSearchForm.cshtml *@
<div class="container my-5">
    <div class="text-center mb-4">
        <h2 class="fw-bold text-success">
            <i class="fas fa-search me-2"></i> Tìm kiếm việc làm
        </h2>
        <p class="text-muted">Nhập từ khóa để tìm công việc phù hợp với bạn</p>
    </div>

    <div class="d-flex justify-content-center">
        <form method="get" asp-action="Index" asp-area="Employee" class="w-75 w-md-50">
            <div class="input-group input-group-lg shadow-sm">
                <input type="text" name="keyword" class="form-control border-success"
                       placeholder="Nhập tên công việc, kỹ năng hoặc công ty..." />
                <button type="submit" class="btn btn-success px-4">
                    <i class="fas fa-search"></i> Tìm kiếm
                </button>
            </div>
        </form>
    </div>
</div>

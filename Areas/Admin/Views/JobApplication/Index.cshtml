
@using DACN.Enums
@{
    Layout = "~/Areas/Admin/Views/Shared/_layout.cshtml";
}

<div class="container" style="margin-top:-60px !important;">
    <h1 class="text-center mb-4 fs-2 fw-bold"
        style="background: linear-gradient(135deg, var(--primary), var(--success));
               -webkit-background-clip: text;
               -webkit-text-fill-color: transparent;
               background-clip: text;">
        <i class="fas fa-users me-3"></i> Quản lý Ứng viên
    </h1>

    <div class="card shadow mb-4">
        <div class="card-body p-4">
            <form id="searchForm" class="row g-3">
                <div class="col-md-3">
                    <label class="form-label">Tên ứng viên</label>
                    <input type="text" class="form-control" name="keySearch" placeholder="VD: Nguyễn Văn A">
                </div>

                <div class="col-md-3">
                    <label class="form-label">Phòng ban</label>
                    <select class="form-select" name="departmentId">
                        <option value="">Tất cả</option>
                        @if (ViewBag.Departments != null)
                        {
                            foreach (var dept in ViewBag.Departments)
                            {
                                <option value="@dept.Value">@dept.Text</option>
                            }
                        }
                    </select>
                </div>

                <div class="col-md-3">
                    <label class="form-label">Trạng thái</label>
                    <select class="form-select" name="status">
                        <option value="">Tất cả</option>
                        @if (ViewBag.StatusList != null)
                        {
                            foreach (SelectOptionDto status in ViewBag.StatusList)
                            {
                                <option value="@status.Value">@status.Text</option>
                            }
                        }
                    </select>
                </div>

                <div class="col-md-3 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100 me-1">
                        <i class="fas fa-search me-1"></i> Tìm kiếm
                    </button>
                    <button type="button" class="btn btn-secondary w-100" onclick="Candidate.resetSearch()">
                        <i class="fas fa-refresh me-1"></i> Reset
                    </button>
                    <a onclick="JobApp.openCreateModal()" class="btn btn-success">
                        <i class="fas fa-plus me-1"></i> Thêm mới
                    </a>
                </div>
            </form>
        </div>
    </div>
    <div class="table-responsive shadow-sm border rounded" id="gridData">
        <!-- Dữ liệu sẽ được load bằng Ajax -->
    </div>
</div>

<div id="modal-placeholder"></div>


@section Scripts {
    <script src="~/js/Admin/jobApplication.js"></script>
}

@model DACN.DTOs.Respone.SalaryRespone

@{
    // 1. Cấu hình định dạng tiền tệ (Tiếng Việt: 15.000.000)
    System.Globalization.CultureInfo culture = new System.Globalization.CultureInfo("vi-VN");

    // 2. TÍNH TOÁN HIỂN THỊ (Chỉ để hiện lên các ô Readonly cho đẹp)

    // a. Lương theo ngày công
    decimal salaryByWorkDay = 0;
    if (Model.StandardWorkDays > 0)
    {
        salaryByWorkDay = (Model.BaseSalary / (decimal)Model.StandardWorkDays) * (decimal)Model.WorkDays;
        salaryByWorkDay = Math.Round(salaryByWorkDay, 0);
    }

    // b. Bảo hiểm (Hiển thị)
    decimal insuranceDisp = Math.Round(Model.BaseSalary * 0.105m, 0);
    // 3. TÍNH TOÁN "LƯƠNG THỰC LĨNH GỐC" (QUAN TRỌNG NHẤT)
    // Đây là số tiền lương khi CHƯA cộng Thưởng và CHƯA trừ Phạt tay.
    // Công thức ngược: Lấy Net hiện tại - Thưởng cũ + Phạt tay cũ
    int baseNetSalary = (int)Math.Round(Model.NetSalary - Model.Bonus + Model.ManualDeduction, 0);
}

<div class="modal fade" id="salaryEditModal" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content border-0 shadow">

            <div class="modal-header bg-warning bg-opacity-10">
                <div>
                    <h5 class="modal-title fw-bold text-dark">
                        <i class="fas fa-file-signature me-2 text-warning"></i>Điều chỉnh Lương
                    </h5>
                    <small class="text-muted">
                        Nhân viên: <strong>@Model.EmployeeName</strong> |
                        Kỳ lương: <strong>@Model.Month/@Model.Year</strong>
                    </small>
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body bg-light">
                <form id="frmEditSalary">
                    <input type="hidden" name="id" value="@Model.SalaryId" />

                    <input type="hidden" id="val_base_net" data-val="@baseNetSalary" />

                    <div class="alert alert-primary border-0 bg-primary bg-opacity-10 d-flex align-items-center py-2 px-3 mb-3">
                        <i class="fas fa-info-circle me-2 text-primary"></i>
                        <div class="small">
                            Công chuẩn: <strong>@Model.StandardWorkDays</strong> &bull;
                            Công thực tế: <strong>@Model.WorkDays</strong>
                        </div>
                    </div>

                    <div class="row g-3">

                        <div class="col-md-6">
                            <div class="p-3 bg-white rounded shadow-sm h-100 border-top border-4 border-success">
                                <h6 class="fw-bold text-success mb-3 border-bottom pb-2">
                                    <i class="fas fa-plus-circle me-1"></i>CÁC KHOẢN THU NHẬP
                                </h6>

                                <div class="mb-2">
                                    <label class="small fw-bold text-muted">Lương theo ngày công</label>
                                    <div class="input-group input-group-sm">
                                        <input type="text" class="form-control fw-bold text-end bg-light text-secondary"
                                               value="@salaryByWorkDay.ToString("#,##0", culture)" readonly>
                                        <span class="input-group-text">VNĐ</span>
                                    </div>
                                </div>

                                <div class="mb-2">
                                    <label class="small fw-bold text-muted">Phụ cấp cố định (HĐ)</label>
                                    <div class="input-group input-group-sm">
                                        <input type="text" class="form-control fw-bold text-end bg-light text-secondary"
                                               value="@Model.Allowance.ToString("#,##0", culture)" readonly>
                                        <span class="input-group-text">VNĐ</span>
                                    </div>
                                </div>

                                <div class="mb-2 mt-3 position-relative">
                                    <label class="small fw-bold text-dark">Thưởng thêm / KPI <span class="text-danger">*</span></label>
                                    <div class="input-group input-group-sm">
                                        <input type="number" name="bonus" class="form-control fw-bold text-success text-end border-success bg-success bg-opacity-10"
                                               value="@((int)Model.Bonus)"
                                               id="val_bonus" oninput="calculateNet()">
                                        <span class="input-group-text bg-success text-white fw-bold">VNĐ</span>
                                    </div>
                                    <small class="text-muted fst-italic" style="font-size: 0.7rem">Nhập số tiền thưởng nóng, hoa hồng...</small>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="p-3 bg-white rounded shadow-sm h-100 border-top border-4 border-danger">
                                <h6 class="fw-bold text-danger mb-3 border-bottom pb-2">
                                    <i class="fas fa-minus-circle me-1"></i>CÁC KHOẢN KHẤU TRỪ
                                </h6>

                                <div class="mb-2">
                                    <label class="small fw-bold text-muted">Bảo hiểm (10.5%)</label>
                                    <div class="input-group input-group-sm">
                                        <input type="text" class="form-control fw-bold text-end bg-light text-danger"
                                               value="@insuranceDisp.ToString("#,##0", culture)" readonly>
                                        <span class="input-group-text">VNĐ</span>
                                    </div>
                                </div>

                                <div class="mb-2">
                                    <label class="small fw-bold text-muted">Phạt đi muộn (Auto)</label>
                                    <div class="input-group input-group-sm">
                                        <input type="text" class="form-control fw-bold text-end bg-light text-danger"
                                               value="@Model.Deduction.ToString("#,##0", culture)" readonly>
                                        <span class="input-group-text">VNĐ</span>
                                    </div>
                                </div>

                                <div class="mb-2 mt-3">
                                    <label class="small fw-bold text-dark">Phạt khác / Tạm ứng <span class="text-danger">*</span></label>
                                    <div class="input-group input-group-sm">
                                        <input type="number" name="manualDeduction" class="form-control fw-bold text-danger text-end border-danger bg-danger bg-opacity-10"
                                               value="@((int)Model.ManualDeduction)"
                                               id="val_manual_deduct" oninput="calculateNet()">
                                        <span class="input-group-text bg-danger text-white fw-bold">VNĐ</span>
                                    </div>
                                    <small class="text-muted fst-italic" style="font-size: 0.7rem">Làm hỏng đồ, ứng lương trước...</small>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card bg-primary bg-opacity-10 border border-primary mt-3">
                        <div class="card-body d-flex justify-content-between align-items-center py-2">
                            <span class="fw-bold text-uppercase text-primary">Thực lĩnh (Net Salary):</span>
                            <h3 class="fw-bold text-primary mb-0" id="lblNetPreview">
                                @Model.NetSalary.ToString("#,##0", culture) <small class="fs-6 text-dark">VNĐ</small>
                            </h3>
                        </div>
                    </div>

                    <div class="mt-3">
                        <label class="small fw-bold text-muted">Ghi chú điều chỉnh</label>
                        <textarea name="note" class="form-control" rows="2" placeholder="Nhập lý do thưởng/phạt thêm...">@Model.Note</textarea>
                    </div>
                </form>
            </div>

            <div class="modal-footer bg-light">
                <button type="button" class="btn btn-light" data-bs-dismiss="modal">Hủy bỏ</button>
                <button type="button" class="btn btn-primary fw-bold px-4" onclick="Salary.EditPost()">
                    <i class="fas fa-save me-1"></i> Lưu & Tính lại
                </button>
            </div>
        </div>
    </div>
</div>

<script>
    function formatMoney(num) {
        return num.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ".");
    }

    function calculateNet() {

        // 1. Lương gốc – integer hoàn toàn
        let baseNet = Number(document.getElementById('val_base_net').dataset.val) || 0;

        // 2. Bonus & Phạt – integer
        let bonus = Number(document.getElementById('val_bonus').value) || 0;
        let manualDeduct = Number(document.getElementById('val_manual_deduct').value) || 0;

        // 3. Tính lương cuối
        let finalNet = baseNet + bonus - manualDeduct;

        // 4. Hiển thị
        const lbl = document.getElementById('lblNetPreview');
        lbl.innerHTML = formatMoney(finalNet) + ' <small class="fs-6 text-dark">VNĐ</small>';

        // 5. Đổi màu nếu âm
        lbl.className = finalNet < 0 ? "fw-bold mb-0 text-danger" : "fw-bold mb-0 text-primary";
    }
</script>

@using DACN.DTOs
@using DACN.Enums
@{
    Layout = "~/Areas/Admin/Views/Shared/_layout.cshtml";
  
}
<div class="container" style="margin-top:-60px !important;">

    <h1 class="text-center mb-4 fs-2 fw-bold"
        style="background: linear-gradient(135deg, var(--primary), var(--success));
               -webkit-background-clip: text;
               -webkit-text-fill-color: transparent;
               background-clip: text;">
        <i class="fas fa-file-upload me-3"></i> Quản lý Đăng CV
    </h1>
    <div class="card shadow mb-4">
        <div class="card-body p-4">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h5 class="mb-0"><i class="fas fa-search text-primary"></i> Tìm kiếm CV</h5>
                <a onclick="Job.openCreateModal()" class="btn btn-success">
                    <i class="fas fa-plus me-1"></i> Thêm mới
                </a>
            </div>

            <form id="searchForm" class="row g-3">
                <div class="col-md-3">
                    <label class="form-label">Tên CV</label>
                    <input type="text" class="form-control" name="keySearch" placeholder="VD: CV Developer">
                </div>

                <div class="col-md-3">
                    <label class="form-label">Trạng thái</label>
                    <select class="form-select" name="status">
                        <option value="">Tất cả</option>
                        @if (ViewBag.StatusList != null)
                        {
                            foreach (SelectOptionDto item in ViewBag.StatusList)
                            {
                                <option value="@item.Value">@item.Text</option>
                            }
                        }
                    </select>
                </div>

                <div class="col-md-3">
                    <label class="form-label">Phòng ban</label>
                    <select class="form-select" name="departmentId">
                        <option value="">Tất cả</option>
                        @if (ViewBag.Departments != null)
                        {
                            foreach (SelectOptionDto dept in ViewBag.Departments)
                            {
                                <option value="@dept.Value">@dept.Text</option>
                            }
                        }
                    </select>
                </div>

                <div class="col-md-3">
                    <label class="form-label">Ngày hết hạn</label>
                    <input type="date" class="form-control" name="ExpirationDate">
                </div>

                <div class="col-md-3">
                    <label class="form-label">Ngày đăng (từ)</label>
                    <input type="date" class="form-control" name="PostedDate">
                </div>

                <div class="col-md-3">
                    <label class="form-label">Ngày đăng (đến)</label>
                    <input type="date" class="form-control" name="DateTo">
                </div>

                <div class="col-md-3 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100 mb-2 mb-md-0 me-md-1">
                        <i class="fas fa-search me-1"></i> Tìm kiếm
                    </button>
                    <button type="button" class="btn btn-secondary w-100">
                        <i class="fas fa-refresh me-1"></i> Reset
                    </button>
                </div>
            </form>
        </div>
    </div>


    <div class="table-responsive shadow-sm border rounded" id="gridData">
        <!-- Dữ liệu sẽ được load bằng Ajax -->
    </div>  
</div>
<div id="modal-placeholder"></div>
@section Scripts {
    <script src="~/js/Admin/jobposting.js"></script>
}

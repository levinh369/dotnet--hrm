@using DACN.DTOs
@model IEnumerable<DACN.DTOs.Respone.PositionResponse>
@{
    Layout = "~/Areas/Admin/Views/Shared/_layout.cshtml";
}

<div class="container" style="margin-top:-60px !important;">
    <h1 class="text-center mb-4 fs-2 fw-bold" style="background: linear-gradient(135deg, var(--primary), var(--success)); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">
        <i class="fas fa-briefcase me-2"></i> Quản lý Chức vụ
    </h1>

    <div class="card shadow mb-4">
        <div class="card-body p-4">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h5 class="mb-0"><i class="fas fa-search text-primary"></i> Tìm kiếm</h5>
                <a onclick="Pos.openCreateModal()" class="btn btn-success">
                    <i class="fas fa-plus me-1"></i> Thêm mới
                </a>
            </div>

            <form id="searchForm" class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">Tên chức vụ</label>
                    <input type="text" class="form-control" name="keySearch" placeholder="VD: Giám đốc, Nhân viên">
                </div>
                <div class="col-md-3">
                    <label class="form-label">Trạng thái</label>
                    <select class="form-select" name="isActive">
                        <option value="-1">Tất cả</option>
                        <option value="1">Hoạt động</option>
                        <option value="0">Vô hiệu</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label">Từ ngày</label>
                    <input type="date" class="form-control" name="fromDate" />
                </div>
                <div class="col-md-2">
                    <label class="form-label">Đến ngày</label>
                    <input type="date" class="form-control" name="DateTo" />
                </div>

                <div class="col-12 d-flex justify-content-end gap-2">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-search me-1"></i> Tìm kiếm
                    </button>
                    <button type="button" class="btn btn-secondary" onclick="Position.resetForm()">
                        <i class="fas fa-refresh me-1"></i> Reset
                    </button>
                </div>
            </form>
        </div>
    </div>

    <div class="table-responsive shadow-sm border rounded" id="gridData">
        <!-- Dữ liệu sẽ được load bằng Ajax -->
    </div>
</div>

<div id="modal-placeholder"></div>

@section Scripts {
    <script src="~/js/Admin/position.js"></script>
}

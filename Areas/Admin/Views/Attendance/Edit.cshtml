@model DACN.DTOs.Respone.AttendanceDetailRespone

<div class="modal fade" id="attendanceEditModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow">

            <div class="modal-header bg-warning bg-opacity-10">
                <h5 class="modal-title fw-bold text-dark">
                    <i class="fas fa-edit me-2 text-warning"></i>Chỉnh sửa công
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">
                <form id="frmEditAttendance">
                    <input type="hidden" name="Id" value="@Model.Id" />

                    <div class="alert alert-light border d-flex justify-content-between align-items-center mb-3">
                        <div>
                            <small class="text-muted d-block">Nhân viên</small>
                            <span class="fw-bold text-dark">@Model.EmployeeName</span>
                        </div>

                        <div class="text-end">
                            <small class="text-muted d-block">Ngày chấm công</small>
                            <span class="fw-bold text-primary">
                                <i class="far fa-calendar-alt me-1"></i>@Model.WorkDate?.ToString("dd/MM/yyyy")
                            </span>
                        </div>
                    </div>

                    <div class="row g-3 mb-3">
                        <div class="col-6">
                            <label class="form-label fw-bold small">Giờ vào (Check-in)</label>
                            <input type="time" name="RawCheckInTime" class="form-control fw-bold"
                                   value="@(Model.CheckIn?.ToString(@"hh\:mm"))">
                        </div>
                        <div class="col-6">
                            <label class="form-label fw-bold small">Giờ ra (Check-out)</label>
                            <input type="time" name="RawCheckOutTime" class="form-control fw-bold"
                                   value="@(Model.CheckOut?.ToString(@"hh\:mm"))">
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold small text-success">Tổng giờ làm hiện tại</label>
                        <div class="input-group">
                            <input type="text" class="form-control fw-bold text-success bg-white" readonly
                                   value="@Model.WorkingHours">
                            <span class="input-group-text text-success fw-bold">Giờ</span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold small text-danger">Lý do chỉnh sửa (*)</label>
                        <textarea name="EditReason" class="form-control" rows="3"
                                  placeholder="VD: Quên chấm công, Máy lỗi..." required>@Model.EditReason</textarea>
                        <small class="text-muted fst-italic" style="font-size: 0.8rem;">
                            <i class="fas fa-info-circle me-1"></i>Hành động này sẽ được lưu vào lịch sử hệ thống.
                        </small>
                    </div>
                    <div class="modal-footer bg-light">
                        <button type="button" class="btn btn-light" data-bs-dismiss="modal">Hủy bỏ</button>
                        <button type="submit" class="btn btn-primary fw-bold px-4">
                            <i class="fas fa-save me-1"></i> Lưu thay đổi
                        </button>
                    </div>
                </form>
            </div>

            
        </div>
    </div>
</div>
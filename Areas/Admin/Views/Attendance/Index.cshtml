@using DACN.DTOs.Respone
@model AttendanceSummary
@{
    ViewData["Title"] = "Quản lý Chấm công";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid bg-light min-vh-100 py-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h3 class="fw-bold text-primary mb-1">
                <i class="fas fa-calendar-check me-2"></i>Quản lý Chấm Công
            </h3>
            <p class="text-muted mb-0">
                Dữ liệu hiển thị ngày: <span class="fw-bold text-dark badge bg-warning bg-opacity-25 text-dark px-3" id="displayDate">@Model.Date.ToString("dd/MM/yyyy")</span>
            </p>
        </div>
    </div>

    <div class="row g-3 mb-4">
        <div class="col-md-3 col-sm-6">
            <div class="card border-0 shadow-sm h-100 border-start border-4 border-primary hover-shadow transition-all">
                <div class="card-body d-flex align-items-center justify-content-between">
                    <div>
                        <h6 class="text-uppercase text-muted small fw-bold mb-1">Tổng nhân sự</h6>
                        <h2 class="mb-0 fw-bold text-dark" id="lblTotal">@(Model?.TotalStaffCount ?? 0)</h2>
                    </div>
                    <div class="bg-primary bg-opacity-10 text-primary rounded-circle d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                        <i class="fas fa-users fa-lg"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3 col-sm-6">
            <div class="card border-0 shadow-sm h-100 border-start border-4 border-success hover-shadow transition-all">
                <div class="card-body d-flex align-items-center justify-content-between">
                    <div>
                        <h6 class="text-uppercase text-muted small fw-bold mb-1">Đúng giờ</h6>
                        <h2 class="mb-0 fw-bold text-success" id="lblOnTime">@(Model?.OnTimeCount ?? 0)</h2>
                    </div>
                    <div class="bg-success bg-opacity-10 text-success rounded-circle d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                        <i class="fas fa-check fw-bold fa-lg"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3 col-sm-6">
            <div class="card border-0 shadow-sm h-100 border-start border-4 border-warning hover-shadow transition-all">
                <div class="card-body d-flex align-items-center justify-content-between">
                    <div>
                        <h6 class="text-uppercase text-muted small fw-bold mb-1">Đi muộn / Về sớm</h6>
                        <h2 class="mb-0 fw-bold text-warning" id="lblLate">@(Model?.LateOrEarlyCount ?? 0)</h2>
                    </div>
                    <div class="bg-warning bg-opacity-10 text-warning rounded-circle d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                        <i class="fas fa-exclamation-triangle fa-lg"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3 col-sm-6">
            <div class="card border-0 shadow-sm h-100 border-start border-4 border-danger hover-shadow transition-all">
                <div class="card-body d-flex align-items-center justify-content-between">
                    <div>
                        <h6 class="text-uppercase text-muted small fw-bold mb-1">Vắng mặt</h6>
                        <h2 class="mb-0 fw-bold text-danger" id="lblAbsent">@(Model?.AbsentCount ?? 0)</h2>
                    </div>
                    <div class="bg-danger bg-opacity-10 text-danger rounded-circle d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                        <i class="fas fa-user-slash fa-lg"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body p-4">
            <form id="searchForm">
                <div class="row g-3">
                    <div class="col-lg-3 col-md-6">
                        <label class="small text-muted fw-bold mb-1"><i class="far fa-calendar-alt me-1"></i>Ngày làm việc</label>
                        <input type="date" name="FromDate" id="txtFilterDate" class="form-control bg-light" value="@Model.Date.ToString("yyyy-MM-dd")">
                    </div>

                    <div class="col-lg-3 col-md-6">
                        <label class="small text-muted fw-bold mb-1"><i class="far fa-building me-1"></i>Phòng ban</label>
                        <select class="form-select bg-light" id="departmentFilter" name="DepartmentId">
                            <option value="">-- Tất cả phòng ban --</option>
                            @if (ViewBag.Departments != null)
                            {
                                foreach (var dept in ViewBag.Departments)
                                {
                                    <option value="@dept.Value">@dept.Text</option>
                                }
                            }
                        </select>
                    </div>

                    <div class="col-lg-3 col-md-6">
                        <label class="small text-muted fw-bold mb-1"><i class="fas fa-search me-1"></i>Tìm kiếm</label>
                        <input type="text" id="txtSearch" name="KeySearch" class="form-control bg-light" placeholder="Tên hoặc Mã NV...">
                    </div>

                    <div class="col-lg-3 col-md-6 d-flex align-items-end">
                        <div class="d-flex w-100 gap-2">
                            <button type="submit" class="btn btn-primary fw-bold flex-grow-1 shadow-sm" id="btnFilter">
                                <i class="fas fa-filter me-1"></i> Lọc
                            </button>

                            <button type="button" class="btn btn-success fw-bold flex-grow-1 shadow-sm text-white" id="btnExport" title="Xuất dữ liệu ra file Excel">
                                <i class="fas fa-file-excel me-1"></i> Xuất Excel
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="card border-0 shadow-sm rounded-3 overflow-hidden">
        <div class="card-header bg-white py-3 border-bottom d-flex justify-content-between align-items-center">
            <h6 class="mb-0 fw-bold text-dark"><i class="fas fa-list me-2 text-primary"></i>Danh sách Chi tiết</h6>
            <small class="text-muted fst-italic">Cập nhật lúc: @DateTime.Now.ToString("HH:mm")</small>
        </div>

        <div class="card-body p-0">
            <div id="gridData" class="table-responsive">
                <div class="text-center py-5">
                    <div class="spinner-border text-primary" role="status"></div>
                    <p class="text-muted mt-2">Đang tải dữ liệu...</p>
                </div>
            </div>
        </div>
    </div>

</div>

<div id="modal-placeholder"></div>

<style>
    .hover-shadow:hover {
        transform: translateY(-3px);
        box-shadow: 0 .5rem 1rem rgba(0,0,0,.15) !important;
        transition: all 0.3s ease;
    }

    .transition-all {
        transition: all 0.3s ease;
    }
</style>

@section Scripts {
    <script src="~/js/Admin/Attendance.js"></script>
}
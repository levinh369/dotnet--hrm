@using static DACN.Enums.StatusEnums
@using DACN.DTOs.Respone
@model ContractSummary
@{
    ViewData["Title"] = "Quản lý Hợp đồng";
    Layout = "~/Areas/Admin/Views/Shared/_layout.cshtml";

}

<style>
    /* CSS cho Card thống kê */
    .card-stat {
        transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
        cursor: pointer;
        border-left: 5px solid transparent;
    }

        .card-stat:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.15) !important;
        }

    .card-stat-primary {
        border-left-color: #4e73df;
    }

    .card-stat-success {
        border-left-color: #1cc88a;
    }

    .card-stat-warning {
        border-left-color: #f6c23e;
    }

    .card-stat-secondary {
        border-left-color: #858796;
    }

    .stat-icon {
        position: absolute;
        right: 15px;
        top: 50%;
        transform: translateY(-50%);
        font-size: 3rem;
        opacity: 0.15;
    }
</style>

<div class="container-fluid px-4" style="margin-top: -20px;">

    <div class="d-flex justify-content-between align-items-center my-4">
        <div>
            <h2 class="fw-bold text-primary mb-0"><i class="fas fa-file-contract me-2"></i>Quản lý Hợp đồng</h2>
            <p class="text-muted mb-0 small">Quản lý hồ sơ pháp lý nhân viên</p>
        </div>
        <button class="btn btn-success shadow-sm" onclick="conTract.openCreateModal()">
            <i class="fas fa-plus-circle me-2"></i> Tạo Hợp đồng mới
        </button>
    </div>

    <div class="row g-3 mb-4">
        <div class="col-xl-3 col-md-6" onclick="Contract.filterByStatus('')">
            <div class="card card-stat card-stat-primary border-0 shadow-sm h-100 bg-primary text-white position-relative overflow-hidden">
                <div class="card-body">
                    <div class="text-uppercase small fw-bold opacity-75 mb-1">Tổng số Hợp đồng</div>
                    <div class="h3 fw-bold mb-0" id="lblTotal">@(Model?.TotalAll ?? 0)</div>
                    <i class="fas fa-folder-open stat-icon text-white"></i>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6" onclick="Contract.filterByStatus('1')">
            <div class="card card-stat card-stat-success border-0 shadow-sm h-100 bg-success text-white position-relative overflow-hidden">
                <div class="card-body">
                    <div class="text-uppercase small fw-bold opacity-75 mb-1">Đang hiệu lực</div>
                    <div class="h3 fw-bold mb-0" id="lblActive">@(Model?.TotalActive ?? 0)</div>
                    <i class="fas fa-check-circle stat-icon text-white"></i>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6" onclick="Contract.filterByStatus('2')">
            <div class="card card-stat card-stat-warning border-0 shadow-sm h-100 bg-warning text-dark position-relative overflow-hidden">
                <div class="card-body">
                    <div class="text-uppercase small fw-bold opacity-75 mb-1">Chưa hiệu lực</div>
                    <div class="h3 fw-bold mb-0" id="lblExpiring">@(Model?.TotalNotYetEffective ?? 0)</div>
                    <i class="fas fa-exclamation-triangle stat-icon text-dark"></i>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6" onclick="Contract.filterByStatus('0')">
            <div class="card card-stat card-stat-secondary border-0 shadow-sm h-100 bg-secondary text-white position-relative overflow-hidden">
                <div class="card-body">
                    <div class="text-uppercase small fw-bold opacity-75 mb-1">Đã hết hạn / Hủy</div>
                    <div class="h3 fw-bold mb-0" id="lblExpired">@(Model?.TotalExpired ?? 0)</div>
                    <i class="fas fa-history stat-icon text-white"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm mb-4 border-0">
        <div class="card-body">
            <form id="searchForm" class="row g-3">
                <div class="col-md-4">
                    <label class="form-label fw-medium small text-muted">Từ khóa</label>
                    <input type="text" class="form-control" name="keySearch" placeholder="Mã HĐ, Tên NV...">
                </div>
                <div class="col-md-3">
                    <label class="form-label">Loại hợp đồng</label>
                    <select class="form-select" name="contractType"
                            asp-items="Html.GetEnumSelectList<ContractType>()">
                        <option value="-1">-- Tất cả --</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label">Trạng thái</label>
                    <select class="form-select" name="status"
                            asp-items="Html.GetEnumSelectList<ContractStatus>()">
                        <option value="-1">-- Tất cả --</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label fw-medium small text-muted">Ngày ký (Từ - Đến)</label>
                    <div class="input-group">
                        <input type="date" class="form-control" name="fromDate" title="Từ ngày">
                        <span class="input-group-text">-</span>
                        <input type="date" class="form-control" name="toDate" title="Đến ngày">
                    </div>
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="button" class="btn btn-primary w-100" onclick="conTract.loadData()">
                        <i class="fas fa-search me-1"></i> Tìm
                    </button>
                </div>
            </form>
        </div>
    </div>
    <div class="table-responsive shadow-sm border rounded" id="gridData">
        <!-- Dữ liệu sẽ được load bằng Ajax -->
    </div>
</div>
<div id="modal-placeholder"></div>

@section Scripts {
    <script src="~/js/Admin/Contract.js"></script>
}
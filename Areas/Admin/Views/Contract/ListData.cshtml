@using DACN.DTOs.Respone
@using static DACN.Enums.StatusEnums
@model IEnumerable<ContractRespone>

<div class="card shadow-sm">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light text-uppercase small text-muted">
                    <tr>
                        <th class="ps-4">Mã HĐ</th>
                        <th>Nhân viên</th>
                        <th>Loại / Thời hạn</th>
                        <th>Lương cơ bản</th>
                        <th>Trạng thái</th>
                        <th>Ngày ký</th>
                        <th class="text-end pe-4">Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            // Logic xác định class màu sắc cho dòng (nếu sắp hết hạn)
                            var rowClass = "";
                            if (item.Status == (int)ContractStatus.HetHan)
                            {
                                rowClass = "table-warning bg-opacity-10";
                            }

                            <tr class="@rowClass">
                                <td class="ps-4 fw-bold text-primary">@item.ContractCode</td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <img src="@(item.AvatarUrl ?? "/images/default-avatar.png")" class="rounded-circle me-2" width="36" height="36">
                                        <div>
                                            <div class="fw-bold">@item.EmployeeName</div>
                                            <div class="small text-muted">@item.DepartmentName</div>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    @{
                                        // 1. Xử lý Tên hiển thị & Màu sắc dựa trên Enum của bạn
                                        var (typeText, badgeClass) = (ContractType)item.ContractType switch
                                        {
                                            ContractType.ThuViec => ("Thử việc", "bg-secondary"),        // Màu Xám
                                            ContractType.CoThoiHan => ("Có thời hạn", "bg-info text-dark"),// Màu Xanh dương nhạt
                                            ContractType.ChinhThuc => ("Chính thức", "bg-success"),        // Màu Xanh lá (Ưu tiên cao nhất)
                                            ContractType.ThoiVu => ("Thời vụ", "bg-warning text-dark"), // Màu Vàng
                                            _ => ("Khác", "bg-light text-dark")
                                        };
                                    }

                                    <span class="badge @badgeClass mb-1">@typeText</span>
                                    <br>

                                    <small class="text-muted">
                                        @item.StartDate.ToString("dd/MM/yy") -
                                        @(item.EndDate.HasValue? item.EndDate.Value.ToString("dd/MM/yy") : "...")
                                    </small>
                                </td>
                                <td class="fw-bold">@item.BasicSalary.ToString("N0") ₫</td>
                                <td>
                                    @* Badge trạng thái *@
                                    @if (item.Status == ContractStatus.ConHieuLuc)
                                    {
                                        <span class="badge bg-success-subtle text-success border border-success">Đang hiệu lực</span>
                                    }
                                    else if (item.Status == ContractStatus.ChuaHieuLuc)
                                    {
                                        <span class="badge bg-warning text-dark border border-warning">Chưa kích hoạt</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Đã hết hạn</span>
                                    }
                                </td>
                                <td>@item.SignedDate.ToString("dd/MM/yyyy")</td>
                                <td class="text-end pe-4 text-nowrap">
                                    <button class="btn btn-sm btn-outline-info"
                                            onclick="conTract.detail(@item.ContractId)"
                                            title="Xem chi tiết hợp đồng">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                    @* 1. Xem file (Giữ nguyên) *@
                                    @if (!string.IsNullOrEmpty(item.FilePath))
                                    {
                                        <a href="@item.FilePath" target="_blank" class="btn btn-sm btn-outline-secondary" title="Xem file PDF"><i class="fas fa-file-pdf"></i></a>
                                    }

                                    @* 2. Nút Gia hạn / Ký tiếp (LUÔN HIỆN) *@
                                    @* Thay đổi title thành "Ký tiếp/Gia hạn" cho đúng ngữ cảnh *@
                                    <button class="btn btn-sm btn-warning"
                                            onclick="conTract.renew(@item.ContractId)"
                                            title="Gia hạn / Ký tiếp HĐ mới">
                                        <i class="fas fa-file-signature"></i> @* Đổi icon bút ký cho hợp lý *@
                                    </button>

                                    @* 3. Nút Chỉnh sửa (Giữ nguyên) *@
                                    <button class="btn btn-sm btn-outline-primary"
                                            onclick="conTract.edit(@item.ContractId)"
                                            title="Chỉnh sửa">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="text-center py-5 text-muted">
                                Không có dữ liệu hợp đồng nào.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="card-footer bg-white py-3">
    </div>
</div>
<div class="d-flex justify-content-between align-items-center mt-3">
    <div>
        Tổng số bản ghi: <strong>@ViewBag.Total</strong>
    </div>
    <div id="pagination" data-total-pages="@ViewBag.TotalPage">
        <ul id="paging-ul" class="pagination pagination-sm"></ul>
    </div>
</div>
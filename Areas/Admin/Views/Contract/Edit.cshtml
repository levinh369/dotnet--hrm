@using DACN.Enums
@using static DACN.Enums.StatusEnums
@model DACN.DTOs.Respone.ContractRespone

<div class="modal fade" id="editContractModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg">

            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title"><i class="fas fa-edit me-2"></i>Cập nhật Hợp đồng</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>

            <form id="formEditContract">
                @Html.AntiForgeryToken()
                <div class="modal-body p-4">
                    <input type="hidden" name="ContractId" value="@Model.ContractId" />
                    <input type="hidden" name="EmployeeId" value="@Model.EmployeeId" />

                    <div class="mb-4">
                        <label class="form-label fw-bold">Nhân viên</label>
                        <input type="text" class="form-control bg-light" value="@Model.EmployeeName" readonly disabled>
                    </div>

                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Mã Hợp đồng</label>
                                <input type="text" class="form-control fw-bold" name="ContractCode" value="@Model.ContractCode" readonly>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Loại Hợp đồng</label>
                                <select class="form-select" name="ContractType">
                                    <option value="">-- Chọn loại hợp đồng --</option>
                                    @foreach (ContractType contractType in Enum.GetValues(typeof(ContractType)))
                                    {
                                        var displayText = contractType switch
                                        {
                                            ContractType.ThuViec => "Thử việc",
                                            ContractType.ThoiVu => "Thời vụ",
                                            ContractType.ChinhThuc => "Chính thức",
                                            ContractType.CoThoiHan => "Có thời hạn",
                                            _ => "Không xác định"
                                        };

                                        if (Model.ContractType == contractType)
                                        {
                                            <option value="@((int)contractType)" selected>@displayText</option>
                                        }
                                        else
                                        {
                                            <option value="@((int)contractType)">@displayText</option>
                                        }
                                    }
                                </select>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Trạng thái</label>
                                <select class="form-select" name="status">
                                    <option value="">-- Chọn trạng thái --</option>
                                    @foreach (ContractStatus contractStatus in Enum.GetValues(typeof(ContractStatus)))
                                    {
                                        var displayText = contractStatus switch
                                        {
                                            ContractStatus.ConHieuLuc => "Hoạt động",
                                            ContractStatus.ChuaHieuLuc => "Chưa kích hoạt",
                                            ContractStatus.HetHan => "Hết hạn",
                                            _ => "Không xác định"
                                        };

                                        if (Model.Status == contractStatus)
                                        {
                                            <option value="@((int)contractStatus)" selected>@displayText</option>
                                        }
                                        else
                                        {
                                            <option value="@((int)contractStatus)">@displayText</option>
                                        }
                                    }
                                </select>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Ngày ký</label>
                                <input type="date" class="form-control" name="SignedDate" value="@Model.SignedDate.ToString("yyyy-MM-dd")">
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Lương cơ bản</label>
                                <div class="input-group">
                                    <input type="number" class="form-control fw-bold text-end" name="BasicSalary" value="@((int)Model.BasicSalary)" required>
                                    <span class="input-group-text">₫</span>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-6 mb-3">
                                    <label class="form-label">Hiệu lực từ</label>
                                    <input type="date" class="form-control" name="StartDate" value="@Model.StartDate.ToString("yyyy-MM-dd")">
                                </div>
                                <div class="col-6 mb-3">
                                    <label class="form-label">Đến ngày</label>
                                    <input type="date" class="form-control" name="EndDate" id="editEndDate" value="@Model.EndDate?.ToString("yyyy-MM-dd")">
                                    <small class="text-muted d-none" id="editEndDateNote">Vô thời hạn</small>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-bold">File đính kèm</label>

                                <div class="input-group mb-2">
                                    <input type="file" class="form-control" name="FileContract" id="editFileInput"
                                           accept=".pdf,.doc,.docx" onchange="Contract.previewFilename(this)">
                                </div>

                                <div class="form-text small text-muted mb-2" id="editFileHelp">
                                    Chưa chọn file mới (Giữ nguyên file cũ).
                                </div>

                                @if (!string.IsNullOrEmpty(Model.FilePath))
                                {
                                    <div class="card border-0 bg-light shadow-sm mt-2">
                                        <div class="card-body p-2 d-flex align-items-center justify-content-between">
                                            <div class="d-flex align-items-center overflow-hidden">
                                                <div class="rounded bg-white p-2 text-center border me-2" style="min-width: 40px;">
                                                    <i class="fas fa-file-pdf text-danger fa-lg"></i>
                                                </div>
                                                <div class="text-truncate">
                                                    <div class="small text-muted text-uppercase fw-bold" style="font-size: 0.65rem;">File hiện tại</div>
                                                    <div class="fw-bold text-dark text-truncate" style="max-width: 150px;" title="@System.IO.Path.GetFileName(Model.FilePath)">
                                                        @System.IO.Path.GetFileName(Model.FilePath)
                                                    </div>
                                                </div>
                                            </div>

                                            <a href="@Model.FilePath" target="_blank" class="btn btn-sm btn-outline-primary bg-white border ms-2 text-nowrap" title="Xem nội dung file">
                                                <i class="fas fa-external-link-alt me-1"></i> Mở
                                            </a>
                                        </div>
                                    </div>
                                    <input type="hidden" name="ExistingCvUrl" value="@Model.FilePath" />
                                }
                                else
                                {
                                    <div class="alert alert-secondary py-1 px-2 small mb-0">
                                        <i class="fas fa-info-circle me-1"></i> Chưa có file nào được tải lên.
                                    </div>
                                }
                            </div>
                        </div>

                        <div class="col-12">
                            <label class="form-label">Ghi chú</label>
                            <textarea class="form-control" name="Note" rows="2">@Model.Note</textarea>
                        </div>
                    </div>
                </div>
                <div class="modal-footer bg-light">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-1"></i> Lưu thay đổi
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
@model IEnumerable<DACN.DTOs.Respone.JobPostingRespone>
<div class="search-results">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h4 class="fw-bold text-success mb-0">Kết quả tìm kiếm</h4>
            <p class="text-muted small mb-0">@Model.Count() công việc được tìm thấy</p>
        </div>
    </div>

    @if (Model != null && Model.Any())
    {
        @foreach (var job in Model)
        {
            <div class="card mb-3 shadow-sm border-0 hover-shadow transition-all rounded-3"
                 style="max-width: 95%; margin: 0 auto;">
                <div class="card-body d-flex flex-column flex-md-row justify-content-between align-items-start">

                    <!-- Logo + Thông tin job -->
                    <div class="d-flex align-items-center mb-3 mb-md-0">
                        <img src="~/images/default-company.png"
                             alt="Logo công ty"
                             class="me-3 rounded-3 border"
                             width="70" height="70"
                             style="object-fit: cover;" />

                        <div>
                            <h5 class="fw-bold text-success mb-2">@job.Title</h5>
                            <div class="text-muted small mb-1">
                                <i class="fas fa-building me-1 text-secondary"></i> @job.DepartmentName
                            </div>

                            <!-- Hàng ngang chứa: Địa điểm - Vị trí - Kinh nghiệm -->
                            <div class="d-flex flex-wrap gap-3 text-muted small">
                                <span><i class="fas fa-map-marker-alt me-1 text-danger"></i> Vĩnh Phúc</span>
                                <span><i class="fas fa-user-tie me-1 text-primary"></i> @job.positionName</span>
                                <span><i class="fas fa-briefcase me-1 text-success"></i> 10 năm </span>
                            </div>
                        </div>
                    </div>

                    <!-- Mức lương + Button -->
                    <div class="text-end">
                        <div class="fw-semibold text-success mb-2">
                            <i class="fas fa-money-bill-wave me-1"></i> @job.SalaryRange
                        </div>
                        <a href="@Url.Action("Detail", "Job", new { area = "Employee", jobId = job.Id })"
                           class="btn btn-outline-success btn-sm rounded-pill px-3">
                            <i class="fas fa-info-circle me-1"></i> Xem chi tiết
                        </a>
                    </div>
                </div>

                <!-- Dòng phụ -->
                <!-- Dòng phụ -->
                <div class="border-top pt-2 mt-2 text-muted small d-flex justify-content-between px-3">
                    <span>
                        <i class="fas fa-calendar-alt me-1 text-info"></i>
                        @{
                            if (job.ExpirationDate.HasValue)
                            {
                                var daysLeft = (job.ExpirationDate.Value.Date - DateTime.Now.Date).Days;

                                if (daysLeft > 0)
                                {
                                    <text>Còn @daysLeft ngày nữa (hết hạn: @job.ExpirationDate.Value.ToString("dd/MM/yyyy"))</text>
                                    ;
                                }
                                else if (daysLeft == 0)
                                {
                                    <text>Hết hạn hôm nay (@job.ExpirationDate.Value.ToString("dd/MM/yyyy"))</text>
                                    ;
                                }
                                else
                                {
                                    <text>Đã hết hạn (@job.ExpirationDate.Value.ToString("dd/MM/yyyy"))</text>
                                    ;
                                }
                            }
                            else
                            {
                                <text>Không có hạn nộp</text>
                                ;
                            }
                        }
                    </span>

                    <span>
                        <i class="fas fa-eye me-1 text-warning"></i>
                        @job.ViewCount lượt xem
                    </span>
                </div>

            </div>
        }

    }
    else
    {
        <div class="alert alert-light text-center shadow-sm">
            <i class="fas fa-exclamation-circle text-warning me-2"></i>
            Không tìm thấy công việc nào phù hợp.
        </div>
    }
</div>

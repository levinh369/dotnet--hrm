<!-- Notification Modal -->
<div class="modal fade" id="notificationModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable"
         style="max-width: 450px; width: 450px; margin: 0; position: absolute; top: 60px; right: 120px;">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title">Thông báo</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body p-0">

                <!-- Danh sách thông báo -->
                <ul id="notificationList" class="list-group list-group-flush"
                    style="max-height: 500px; overflow-y: auto;">
                    <li class="text-center text-muted py-4" id="notificationEmpty">
                        Không có thông báo nào
                    </li>
                </ul>

            </div>

            <div class="modal-footer p-2">
                <button id="btnLoadMoreNoti" class="btn btn-outline-primary w-100 btn-sm"
                        style="display:none"
                        onclick="notif.loadNotif(true)">
                    Xem thêm
                </button>
            </div>

        </div>
    </div>
</div>
